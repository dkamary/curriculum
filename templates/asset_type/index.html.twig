{% extends 'base.html.twig' %}

{% block title %}AssetType index{% endblock %}

{% block body %}
    <h1>AssetType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mime</th>
                <th>Name</th>
                <th>DeletedAt</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asset_type in asset_types %}
            <tr>
                <td>{{ asset_type.id }}</td>
                <td>{{ asset_type.mime }}</td>
                <td>{{ asset_type.name }}</td>
                <td>{{ asset_type.deletedAt ? asset_type.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ asset_type.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('asset_type_show', {'id': asset_type.id}) }}">show</a>
                    <a href="{{ path('asset_type_edit', {'id': asset_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('asset_type_new') }}">Create new</a>
{% endblock %}
