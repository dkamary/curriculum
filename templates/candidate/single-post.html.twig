{# Single post template #}
<div class="single-post d-flex flex-row">
    <div class="thumb">
        <img src="{{ asset('img/post.png') }}" alt="">
        {% if features|length > 0 %}
            <ul class="tags">
                {% for known in features %}
                    <li>
                        <a href="#">{{ known.skill.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
    <div class="details">
        <div class="title d-flex flex-row justify-content-between">
            <div class="titles">
                <a href="single.html"><h4>{{ myjob is not null ? myjob.jobTitle : candidate.firstname ~ ' ' ~ candidate.lastname }}</h4></a>
                <h6>{{ xp|format_number({fraction_digit: 1}) }} ans d'experience</h6>					
            </div>
            <ul class="btns">
                <li><a href="#"><span class="lnr lnr-heart"></span></a></li>
                <li><a href="#">Voir le CV</a></li>
            </ul>
        </div>
        <p>
            {{ myjob is not null ? myjob.presentation : '' }}
        </p>
        <h5>Contrat recherche : <strong>{{ myjob.job.name }}</strong></h5>
        <p class="address"><span class="lnr lnr-map"></span> {{ candidate.formattedAddress }}</p>
        {# <p class="address"><span class="lnr lnr-database"></span> 15k - 25k</p> #}
    </div>
</div>